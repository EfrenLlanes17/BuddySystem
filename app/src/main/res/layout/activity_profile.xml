<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:background="@drawable/voiceback"
    android:id="@+id/profileRelativelayout">






    <ImageView
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:id="@+id/logoSign"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#FEFEFF"
        android:layout_alignParentRight="true"
        android:src="@drawable/voiceittextlogo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,"
        android:id="@+id/HelloUser"
        android:textColor="#000000"
        android:textSize="60dp"
        android:layout_marginLeft="400dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:layout_marginTop="105dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NNNNNNNNNNN"
        android:id="@+id/HelloUserName"
        android:textColor="#000000"
        android:textSize="35dp"
        android:layout_marginLeft="400dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:layout_below="@+id/HelloUser"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/line"
        android:textColor="#FED064"
        android:layout_marginTop="240dp"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signed"
        android:textColor="#000000"
        android:layout_marginTop="275dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:id="@+id/HelloFollowing"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FollowingRV"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/HelloFollowing"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___________________"
        android:id="@+id/line2"
        android:layout_marginTop="565dp"
        android:visibility="invisible"
        android:textColor="#000000"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saved"

        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:id="@+id/Saved"
        android:layout_marginTop="555dp"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SavedRV"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/Saved"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join VoiceIt!"
        android:id="@+id/welcome"
        android:textColor="#FFFFFF"
        android:textSize="50dp"

        android:layout_marginLeft="40dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:layout_marginTop="115dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Make Meaningful Change"
        android:id="@+id/signInHeader"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
android:layout_below="@+id/welcome"
        android:layout_marginLeft="40dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"

        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="username already taken"
        android:id="@+id/usernameTakenError"
        android:textSize="20dp"
       android:layout_marginLeft="75dp"
        android:layout_marginTop="355dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="username or password is wrong"
        android:id="@+id/usernameWrongError"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="355dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="cannot have more than 11 characters"
        android:id="@+id/usernameCharacterError"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="355dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="cannot have spaces"
        android:id="@+id/usernameSpaceError"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="355dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:text="username not found"
        android:id="@+id/usernameNotFoundError"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="355dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:id="@+id/passwordShortError"
        android:text="Password Required"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="445dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:id="@+id/passwordSpaceError"
        android:text="cannot have spaces"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="458dp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:id="@+id/uppercaseError"
        android:text="must have at least one uppercase letter"
        android:textSize="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="458dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:id="@+id/numberError"
        android:text="must have at least one number"
        android:textSize="20dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="458dp"
        />

    <TextView
        android:id="@+id/or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="860dp"
        android:text="or"
        android:textColor="#000000"
        android:textSize="30dp" />


    <EditText
        android:layout_marginTop="375dp"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edtTxtUsername"
        android:hint="Full Name"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="20dp"
        android:inputType="text"
        android:imeOptions="actionDone"
     />
    <EditText
        android:layout_marginTop="40dp"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/edtTxtPassword"
        android:layout_below="@+id/edtTxtUsername"
        android:hint="Password"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textSize="20dp"
        android:inputType="text"
        android:imeOptions="actionDone"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign in"
        android:id="@+id/signInProfileBtn"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:elevation="10dp"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="800dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:layout_centerHorizontal="true"
        android:id="@+id/createAccountProfileBtn"
        android:textSize="30dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:elevation="10dp"
        android:layout_below="@+id/signInProfileBtn"
        android:layout_marginTop="50dp"
       />



    <com.example.dinehero.SignatureView
        android:id="@+id/signature_view"
        android:layout_width="400dp"
        android:layout_marginTop="525dp"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"
        android:layout_height="200dp"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/clear_button"
        android:layout_width="73dp"
        android:layout_height="35dp"
        android:backgroundTint="#FAFAFA"
        android:layout_marginLeft="510dp"
        android:layout_marginTop="730dp"
        android:elevation="10dp"
        android:textColor="#000000"
        android:textSize="10dp"
        android:text="Clear" />


    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_marginLeft="100dp"
        android:backgroundTint="#000000"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:text="Save" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a registered voter"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:clickable="true"
        android:buttonTint="@color/black"
        android:visibility="visible"
        android:layout_below="@id/signature_view"
        android:id="@+id/regBox"
        android:layout_marginTop="5dp"
        />


    <FrameLayout
        android:id="@+id/frameLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </FrameLayout>
</RelativeLayout>