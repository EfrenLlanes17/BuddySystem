<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForYouActivity"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Petition"
        android:id="@+id/createPostText"
        android:textColor="#000000"
        android:textSize="50dp"

        android:layout_centerHorizontal="true"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textStyle="bold"
        android:layout_marginTop="70dp"/>







    <!-- Petition Title -->
    <EditText
        android:layout_width="550dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:textColor="#000000"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textSize="35dp"
        android:layout_marginTop="170dp"
        android:id="@+id/edtTextTitle"

        ></EditText>










    <EditText
        android:layout_width="550dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Signatures Needed"
        android:textColorHint="#000000"
        android:textColor="#000000"
        android:textStyle="bold"
        android:inputType="number"
        android:textSize="25dp"
        android:layout_marginTop="390dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:id="@+id/edtTextDate"

        ></EditText>


    <EditText
        android:layout_width="550dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Theme"
        android:textColorHint="#000000"
        android:imeOptions="actionNext"
        android:textColor="#000000"
        android:inputType="text"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="495dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:id="@+id/edtTextLoc"

        ></EditText>

    <EditText
        android:layout_width="550dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint=" Price"
        android:layout_marginTop="225dp"
        android:textColor="#000000"
        android:inputType="number"
        android:visibility="invisible"
        android:textStyle="bold"
        android:textSize="25dp"
        android:id="@+id/edtTextPrice"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textColorHint="#000000"


        ></EditText>

    <EditText
        android:layout_width="550dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Duration"
        android:textColorHint="#000000"
        android:textStyle="bold"
        android:imeOptions="actionNext"
        android:textColor="#000000"
        android:inputType="number"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textSize="25dp"
        android:layout_marginTop="285dp"
        android:id="@+id/edtTextAttending"

        ></EditText>

    <EditText
        android:layout_width="550dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:hint="Description"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:imeOptions="actionDone"
        android:textSize="25dp"
        android:inputType="text"
        android:textStyle="bold"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"

        android:layout_marginTop="600dp"
        android:id="@+id/edtTextDisc"

        ></EditText>


    <Button
        android:id="@+id/foryouSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:backgroundTint="#000000"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text="Go to Sign In"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        />
    <Button
        android:id="@+id/createPostBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textSize="35dp"
        android:text="CREATE"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/ImageTing"
        android:layout_marginBottom="125dp"
        android:layout_marginLeft="285dp"
        android:layout_alignParentBottom="true"
android:background="@drawable/baseline_image_search_24"

        ></ImageButton>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:id="@+id/topNavView2"
        android:layout_height="45dp"
        app:menu="@menu/top_nav_menu"
        app:labelVisibilityMode="labeled"
        android:background="@drawable/gradient3"
        app:itemTextColor="#FFFFFF"
        app:itemIconTint="#FFFFFF"
        app:itemTextAppearanceActive="@color/black"


        />


    <FrameLayout
        android:id="@+id/frameLayout5"
        android:layout_width="0dp"
        android:layout_height="0dp">

    </FrameLayout>



</RelativeLayout>