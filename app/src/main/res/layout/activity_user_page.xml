<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductPage"
    android:background="#FFFFFF">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/txtPPImage"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="80dp"
                android:src="@mipmap/ic_launcher_round"
                />


            <TextView
                android:id="@+id/txtPPName"

                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="400dp"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"

                android:text="Product Name"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="40dp"
                android:layout_marginLeft="60dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lineeee"
        android:text="__________________________________________"
        android:textSize="40dp"
        android:layout_marginTop="340dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textColor="#FE8D9E"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="125dp"
        android:id="@+id/free"
        android:visibility="invisible"
        android:src="@drawable/star"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/txtPPDiscription"
        android:textColor="#000000"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text="Product Discription"
        android:textSize="27dp"
        android:layout_marginRight="20dp"/>

    <Button
        android:id="@+id/sitePPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        android:layout_toLeftOf="@id/followPPButton"
        android:backgroundTint="#000000"
        android:text="RATE"
        android:textSize="20dp"
        android:textColor="#FFFFFF" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followPPButton"
        android:text="MESSAGE"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:visibility="invisible"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFFFFF"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/savePPButton"
        android:text="Share Petitions"
        android:backgroundTint="#000000"
        android:layout_marginTop="700dp"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:layout_marginLeft="95dp"
        />





            <TextView
                android:id="@+id/txtPPPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="525dp"

                android:textAlignment="center"
                android:layout_marginLeft="105dp"
                android:textColor="#000000"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"

                android:text="Product Price"

                android:textSize="24dp"/>


    <TextView
        android:id="@+id/txtPPPercentOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:textColor="#000000"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"

        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text="4.2/5.0"
        android:textSize="35dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/ImageBox"
        android:layout_width="450dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"

        android:background="#FD8C9D"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ImageBoxInBox"
        android:layout_width="425dp"
        android:layout_height="325dp"
        android:layout_centerInParent="true"
        android:background="#FFFFFF" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate User"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textSize="45dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="#FD8C9D"
        android:id="@+id/rateTitleText"
        ></TextView>
    <EditText
        android:layout_width="150dp"
        android:textAlignment="center"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textColor="#FD8C9D"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:textSize="45dp"
        android:textStyle="bold"
        android:imeOptions="actionDone"
        android:visibility="invisible"

        android:id="@+id/ratingEditTxt"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/rateTitleText"
        android:layout_marginTop="55dp"
        android:textColorHint="#FD8C9D"
        ></EditText>
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:layout_marginLeft="180dp"
        android:id="@+id/star1"
        android:src="@drawable/star"

        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="340dp"
        android:visibility="invisible"

        android:layout_marginRight="180dp"
        android:id="@+id/star2"
        android:src="@drawable/star"
        android:layout_alignParentRight="true"

        />




</RelativeLayout>