<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductPage"
    android:background="#FFFFFF">

    <!--  Event Image -->
            <ImageView
                android:id="@+id/txtPPImage"
                android:layout_width="400dp"
                android:layout_height="300dp"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher_round"
                />


    <!--  Event Name -->
            <TextView
                android:id="@+id/txtPPName"

                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Event Name"
                android:textColor="#000000"

                android:textSize="35dp"
                android:layout_centerHorizontal="true"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lineeee"
        android:text="________________________________________________________"
        android:textSize="30dp"
        android:visibility="invisible"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />




    <!--  Event Description -->
    <TextView
        android:id="@+id/txtPPDiscription"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        android:layout_width="625dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        android:layout_below="@+id/lineeee"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text="Event Description"
        android:textSize="22dp"
       android:layout_centerHorizontal="true"/>

    <!--  View Host -->
    <Button
        android:id="@+id/sitePPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_toLeftOf="@id/sharePPButton"
        android:backgroundTint="#000000"
        android:text="VIEW PETITIONER"
        android:textColor="#FFFFFF" />

    <!--  Attend -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/followPPButton"

        android:text="ATTEND"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/sharePPButton"
        android:backgroundTint="#000000"
        />

    <!--  Save -->
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/savePPButton"
        android:text="SAVE"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#000000"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/followPPButton"
        />

    <Button
        android:id="@+id/sharePPButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"
        android:text="SHARE"
        android:layout_marginLeft="10dp"
        android:textColor="#FFFFFF" />



    <!--  Event Location -->
            <TextView
                android:id="@+id/txtPPPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="20dp"
                android:textColor="#787878"
                android:fontFamily="@font/notoserifvithkuqivariablefontwght"

                android:text="Event Location"

                android:textSize="25dp"/>


    <TextView
        android:id="@+id/txtPPPercentOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text=""
        android:textSize="30dp"
         />

    <TextView
        android:id="@+id/txtdaysLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/notoserifvithkuqivariablefontwght"
        android:text=""
        android:textSize="25dp"
        />



</RelativeLayout>